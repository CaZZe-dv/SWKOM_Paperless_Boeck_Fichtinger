                "ASPNETCORE_HTTP_PORTS": "8081" // Match the internal port exposed in the Dockerfile
            },
            "publishAllPorts": true,
            "useSSL": false // Set to false for simplicity unless you're using HTTPS
        }
    },
    "$schema": "http://json.schemastore.org/launchsettings.json",
    "iisSettings": {
        "windowsAuthentication": false,
        "anonymousAuthentication": true,
